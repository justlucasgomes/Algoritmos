algoritmo "média"
var
   N1, N2: inteiro
   M: real
inicio
   Escreva ("Digite um número:")
   Leia (N1)
   Escreva ("Digite outro número para saber a média:")
   Leia (N2)
   M <- (N1 + N2)/2
   Escreva ("Todo mundo sabe que a média de ",N1," +",N2," é ",M," menos você que tem que usar algoritmo pra isso.")
fimalgoritmo